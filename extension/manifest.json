{
  "manifest_version": 3,
  "name": "LLMsTxt Generator",
  "version": "1.1.0",
  "description": "Convert html pages to llms.txt format (markdown). LLMs read the generated llms.txt files to answer queries related to your pages.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "192": "icons/icon192.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "downloads",
    "activeTab",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
